[core]
	excludesfile = /Users/blue/.gitignore_global

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[apply]
	whitespace = nowarn

[alias]
	co = checkout
	gb = git branch
  gba = git branch -a
  gc = git commit -v
  gd = git diff
  gl = git pull
  gp = git push
  gst = git status
